<mvc:View
           controllerName="com.sap.byjus.payments.controller.Worklist"
           xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.m"
		   xmlns:html="http://www.w3.org/1999/xhtml"
		   xmlns:uxap="sap.uxap"
		   xmlns:core="sap.ui.core"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
           xmlns:f="sap.f"
		   xmlns:card="sap.f.cards"
           xmlns:vm="sap.ui.comp.variants"
		   height="100%"
		   xmlns:l="sap.ui.layout">

  		<f:DynamicPage id="dynamicPageId" headerExpanded="true">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
                    <Title text = "Payments (Expenditure)"/>
						<!-- <vm:VariantManagement standardItemText="Cash Collection">
						</vm:VariantManagement> -->
					</f:heading>
					<!-- <f:actions>
						<ToolbarSpacer/>
						<Button
								icon="sap-icon://action"
								type="Transparent"/>
					</f:actions> -->
				</f:DynamicPageTitle>
			</f:title>
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<f:content>
				   <core:Fragment fragmentName="com.sap.byjus.payments.view.fragments.filterBar" 
                        type="XML" />
					</f:content>
				</f:DynamicPageHeader>
			</f:header>

			<!-- DynamicPage Content -->
			<f:content>
            <VBox>
            <VBox id = "cashCollection">
                <core:Fragment  fragmentName="com.sap.byjus.payments.view.fragments.cashCollectionTable" 
                            type="XML" />
            </VBox>
            <VBox id = "lineGraph" visible = "false">
                <core:Fragment fragmentName="com.sap.byjus.payments.view.fragments.lineGraph" 
                            type="XML" />	
            </VBox>
             </VBox>
			</f:content>

			<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<m:Button icon="sap-icon://action" type="Transparent" press="onPress" />
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>


</mvc:View>